{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<style>
    .main-content { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .main-content code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="main-content">
    <h1>Connexion</h1>

    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn">Se connecter</button>
    {{ form_end(form) }}
</div>
{% endblock %}
